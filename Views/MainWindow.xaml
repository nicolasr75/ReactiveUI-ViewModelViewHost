<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ReactiveUI_ViewModelViewHost.ViewModels;assembly=ReactiveUI_ViewModelViewHost"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:reactiveui="http://reactiveui.net"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ReactiveUI_ViewModelViewHost.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="ReactiveUI_ViewModelViewHost"
        FontSize="20">

  <DockPanel Background="Beige">
    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
      <Button Name="BtnShowPage1" Margin="0, 0, 10, 0">Page 1</Button>
      <Button Name="BtnShowPage2">Page 2</Button>
    </StackPanel>
    
    <reactiveui:ViewModelViewHost Name="ViewModelViewHost" Margin="10" Background="White" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"/>

  </DockPanel>
  
</Window>
